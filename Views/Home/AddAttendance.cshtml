    <script>
        $(document).ready(function () {
            $('#employeeId').change(function () {
                var id = $(this).val();
                console.log("Selected Employee ID: " + id);
                if (id) {
                    $.ajax({
                        url: '/Home/GetEmployeeData',
                        type: 'GET',
                        data: { id: id },
                        success: function (data) {
                           
                            if (data) {
                                $('#fullName').val(data.fullName);
                            } else {
                                $('#fullName').val('');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Error:", error);
                        }
                    });
                } else {
                    $('#fullName').val('');
                }
            });

            $('#fullName').change(function () {
                var name = $(this).val();
                console.log("Selected Full Name: " + name);
                if (name) {
                    $.ajax({
                        url: '/Home/GetEmployeeDataByName',
                        type: 'GET',
                        data: { name: name },
                        success: function (data) {
                           
                            if (data) {
                                $('#employeeId').val(data.employeeId);
                            } else {
                                $('#employeeId').val('');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Error:", error);
                        }
                    });
                } else {
                    $('#employeeId').val('');
                }
            });
        });

    </script>




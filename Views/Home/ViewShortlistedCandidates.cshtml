    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });

    </script>



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.shortlist-button').click(function (e) {
                e.preventDefault();
                var candidateId = $(this).data('id');

                $.ajax({
                    url: '@Url.Action("ShortList", "Home")',
                    type: 'POST',
                    data: { id: candidateId },
                    success: function (response) {
                        // Handle the successful response here
                        window.location.href = '@Url.Action("ManageCandidates", "Home")';
                    },
                    error: function (xhr, status, error) {
                        // Handle the error response here
                        console.error("An error occurred: " + error);
                    }
                });
            });
        });
    </script>














    <script>
        $(document).ready(function () {
            $(".edit-candidate").click(function () {
                var candidateId = $(this).data("candidate-id");

                // AJAX request to get candidate details
                $.ajax({
                    url: "/Home/GetCandidateDetails", // Update the URL to your controller action
                    type: "GET",
                    data: { id: candidateId },
                    success: function (data) {
                        // Populate modal form fields with retrieved data
                        $("#candidate-id").val(data.id);
                        $("#candidate-name").val(data.name);
                        $("#candidate-email").val(data.email);
                    },
                    error: function (xhr, status, error) {
                        console.error("An error occurred: " + error);
                    }
                });
            });

            $('#interview-form').on('submit', function (event) {
                event.preventDefault(); // Prevent the default form submission

                var formData = $(this).serializeArray(); // Serialize the form data into an array
                formData.push({ name: "CandidateId", value: $('#candidate-id').val() });
                formData.push({ name: "CandidateName", value: $('#candidate-name').val() });
                formData.push({ name: "CandidateEmail", value: $('#candidate-email').val() });

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("AddInterview", "Home")', // Update with the correct action and controller name
                    data: $.param(formData),
                    success: function (response) {
                        if (response.redirectUrl) {
                            window.location.href = response.redirectUrl; // Redirect to the specified URL
                        } else {
                            console.log(response);
                            $('#modal-lg').modal('hide');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("An error occurred: " + error);
                    }
                });
            });
        });
    </script>



















    @if (TempData["Success"] != null)
    {
        <script>
            alert('@TempData["Success"]');
        </script>
    }



    @if (TempData["Error"] != null)
    {
        <script>
            alert('@TempData["Error"]');
        </script>
    }


</body>

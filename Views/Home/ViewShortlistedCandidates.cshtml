</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <partial name="_Navbar" />
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="../../index3.html" class="brand-link">
                <img src="../../dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">HRMS</span>
            </a>

            <!-- Sidebar -->
            <partial name="_Sidebar" />
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>ShortListed Candidates</h1>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">ShortListed Candidates Schedule Interviews</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>First Name</th>
                                                <th>Last name</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Address</th>
                                                <th>Experince</th>
                                                <th>Resume</th>
                                                <th>Schedule Interview</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var candidate in Model)
                                            {
                                                <tr>
                                                    <td>@candidate.Firstname</td>
                                                    <td>@candidate.Lastname</td>
                                                    <td>@candidate.Email</td>
                                                    <td>@candidate.Phone</td>
                                                    <td>@candidate.Address</td>
                                                    <td>@candidate.Experince</td>
                                                    <td>
                                                        <a style="margin-left:35px;font-size:25px;" target="_blank" href="@candidate.Resumeurl" class="bi bi-file-earmark-arrow-down-fill"></a>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="bi bi-cup-hot-fill edit-candidate"
                                                                data-candidate-id="@candidate.id"
                                                                data-toggle="modal"
                                                                data-target="#modal-lg">
                                                        </button>
                                                    </td>
                                                </tr>
                                            }




                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>First Name</th>
                                                <th>Last name</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Address</th>
                                                <th>Experince</th>
                                                <th>Resume</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>

            <div class="modal fade" id="modal-lg">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Schedule Interview</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="interview-form" method="POST">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label>Candidate Name</label>
                                        <input type="text" class="form-control" id="candidate-name" name="CandidateName" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label>Candidate Email</label>
                                        <input type="email" class="form-control" id="candidate-email" name="CandidateEmail" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label>Place</label>
                                        <input type="text" class="form-control" placeholder="Enter Place" name="Place" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Date</label>
                                        <input type="datetime-local" class="form-control" name="Date" required>
                                    </div>
                                    <input type="hidden" name="CandidateId" id="candidate-id">
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>






            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <partial name="_Footer" />

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

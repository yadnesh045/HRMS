                // AJAX request to get asset details
                $.ajax({
                    url: "/Rahul/EditAssets", // Update the URL to your controller action
                    type: "GET",
                    data: { id: assetId },
                    success: function (data) {
                        // Populate modal form fields with retrieved data
                        $("#assetId").val(data.id);
                        $("input[name='asset_name']").val(data.asset_name);
                        $("input[name='id']").val(data.id);
                        $("input[name='category']").val(data.category);
                        $("input[name='description']").val(data.description);
                        $("input[name='serial_number']").val(data.serial_number);
                        $("input[name='quantitiy']").val(data.quantitiy);
                    }
                });
            });
        });


